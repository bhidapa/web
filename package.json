{
  "name": "web",
  "type": "module",
  "private": true,
  "workspaces": [
    "mu-plugins/blocks/*",
    "infra"
  ],
  "engines": {
    "bun": ">=1.2.23",
    "node": ">=24.0.0"
  },
  "scripts": {
    "blocks:build": "bun -F '@blocks/*' build",
    "blocks:start": "bun -F '@blocks/*' start",
    "build": "bun run blocks:build",
    "check:format": "bunx --bun prettier -c .",
    "check:types": "bunx --bun tsc --noEmit",
    "format": "bun check:format -w"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@tsconfig/bun": "^1.0.8",
    "@tsconfig/strictest": "^2.0.5",
    "@types/bun": "^1.2.22",
    "@types/wordpress__block-editor": "^11.5.17",
    "@types/wordpress__blocks": "^12.5.18",
    "@wordpress/block-editor": "^15.4.0",
    "@wordpress/blocks": "^15.4.0",
    "@wordpress/components": "^30.4.0",
    "@wordpress/i18n": "^6.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-pkg": "^0.21.2",
    "typescript": "^5.9.2"
  }
}
