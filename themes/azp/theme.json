              "fontStyle": "italic"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-Medium.woff2",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-MediumItalic.woff2",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-Semibold.woff2",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-SemiboldItalic.woff2",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-Bold.woff2",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-BoldItalic.woff2",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            }
          ]
        },
        {
          "name": "Monospace",
          "slug": "monospace",
          "fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
        }
      ]
    },
    "border": {
      "radius": true,
      "color": true,
      "width": true
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontWeight": "500",
      "lineHeight": "1.5"
    },
    "spacing": {
      "padding": {
        "right": "var(--wp--preset--spacing--50)",
        "left": "var(--wp--preset--spacing--50)"
      }
    },
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "800"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "900"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "900"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        "typography": {
          "textDecoration": "none"
        },
        ":hover": {
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "elements": {
          "link": {
            "typography": {
              "fontFamily": "var(--wp--preset--font-family--heading)",
              "textDecoration": "none",
              "fontWeight": "600"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      },
      "core/post-title": {
        "elements": {
          "link": {
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      },
      "core/button": {
        "border": {
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--secondary)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "textTransform": "uppercase",
          "letterSpacing": "0.1rem"
        },
        "variations": {
          "outline": {
            "color": {
              "text": "var(--wp--preset--color--secondary)",
              "background": "var(--wp--preset--color--base)"
            }
          },
          "naked": {
            "color": {
              "text": "var(--wp--preset--color--secondary)",
              "background": "var(--wp--preset--color--base)"
            }
          }
        }
      },
      "core/image": {
        "variations": {
          "rounded": {
            "border": {
              "radius": "3px"
            }
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--preset--color--contrast)",
            "style": "solid",
            "width": "3px"
          }
        },
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--50)",
            "right": "var(--wp--preset--spacing--50)  !important",
            "bottom": "var(--wp--preset--spacing--50)",
            "left": "var(--wp--preset--spacing--50) !important"
          },
          "padding": {
            "top": "var(--wp--preset--spacing--20)",
            "right": "var(--wp--preset--spacing--50)",
            "bottom": "var(--wp--preset--spacing--20)",
            "left": "var(--wp--preset--spacing--50)"
          }
        },
        "elements": {
          "cite": {
            "typography": {
              "fontWeight": "400"
            }
          }
        }
      },
      "core/navigation-submenu": {
        "spacing": {
          "padding": {
            "top": "0 !important",
            "bottom": "var(--wp--preset--spacing--20) !important"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ],
  "customTemplates": [
    {
      "name": "e-library-unauthorized",
      "title": "E-Library Unauthorized",
      "postTypes": ["page"]
    }
  ]
}
