{
  "version": 3,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "useRootPaddingAwareAlignments": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "base",
          "color": "#ffffff",
          "name": "Base"
        },
        {
          "slug": "dark-base",
          "color": "#808080",
          "name": "Dark Base"
        },
        {
          "slug": "darker-base",
          "color": "#eeeeee",
          "name": "Darker Base"
        },
        {
          "slug": "contrast",
          "color": "#1e1e1e",
          "name": "Contrast"
        },
        {
          "slug": "primary",
          "color": "#09465c",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#019bbe",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#cbb26e",
          "name": "Accent"
        },
        {
          "slug": "transparent",
          "color": "transparent",
          "name": "Transparent"
        }
      ],
      "gradients": [
        {
          "slug": "primary-white",
          "gradient": "linear-gradient(#0073aa 49.9%,#fff 50%)",
          "name": "Primary color to white"
        },
        {
          "slug": "white-primary",
          "gradient": "linear-gradient(#fff 49.9%,#0073aa 50%)",
          "name": "Horizontal white to Primary color"
        }
      ],
      "duotone": [
        {
          "colors": ["#00a0d2", "#0073aa"],
          "slug": "secondary-primary",
          "name": "Secondary and primary"
        },
        {
          "colors": ["#0073aa", "#f0f0f0"],
          "slug": "primary-contrast",
          "name": "Primary and Contrast"
        }
      ]
    },
    "shadow": {
      "defaultPresets": false,
      "presets": [
        {
          "name": "Elevation 1",
          "slug": "elevation-1",
          "shadow": "0px 2px 1px -1px rgba(0,0,0,0.2),0px 1px 1px 0px rgba(0,0,0,0.14),0px 1px 3px 0px rgba(0,0,0,0.12)"
        },
        {
          "name": "Elevation 2",
          "slug": "elevation-2",
          "shadow": "0px 3px 1px -2px rgba(0,0,0,0.2),0px 2px 2px 0px rgba(0,0,0,0.14),0px 1px 5px 0px rgba(0,0,0,0.12)"
        },
        {
          "name": "Elevation 3",
          "slug": "elevation-3",
          "shadow": "0px 3px 3px -2px rgba(0,0,0,0.2),0px 3px 4px 0px rgba(0,0,0,0.14),0px 1px 8px 0px rgba(0,0,0,0.12)"
        }
      ]
    },
    "layout": {
      "allowCustomContentAndWideSize": false,
      "contentSize": "1000px",
      "wideSize": "1300px"
    },
    "spacing": {
      "customSpacingSize": false,
      "units": ["px", "rem", "%"],
      "padding": true,
      "margin": true,
      "blockGap": true,
      "defaultSpacingSizes": false,
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 5,
        "mediumStep": 1.5,
        "unit": "rem"
      }
    },
    "typography": {
      "customFontSize": false,
      "lineHeight": true,
      "fontFamilies": [
        {
          "name": "Heading",
          "slug": "heading",
          "fontFamily": "'Satoshi',sans-serif",
          "fontFace": [
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Light.woff2",
              "fontWeight": "300",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-LightItalic.woff2",
              "fontWeight": "300",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Regular.woff2",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Italic.woff2",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Medium.woff2",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-MediumItalic.woff2",
              "fontWeight": "500",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Bold.woff2",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-BoldItalic.woff2",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-Black.woff2",
              "fontWeight": "900",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Satoshi",
              "src": "file:./assets/fonts/satoshi/Satoshi-BlackItalic.woff2",
              "fontWeight": "900",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            }
          ]
        },
        {
          "name": "Body",
          "slug": "body",
          "fontFamily": "'Erode',serif",
          "fontFace": [
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-Light.woff2",
              "fontWeight": "300",
              "fontDisplay": "swap",
              "fontStyle": "normal"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-LightItalic.woff2",
              "fontWeight": "300",
              "fontDisplay": "swap",
              "fontStyle": "italic"
            },
            {
              "fontFamily": "Erode",
              "src": "file:./assets/fonts/erode/Erode-Regular.woff2",
