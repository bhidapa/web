{
  "name": "web",
  "type": "module",
  "private": true,
  "workspaces": [
    "infra",
    "mu-plugins/blocks/*",
    "plugins/e-library/blocks/*",
    "themes/azp/blocks/*"
  ],
  "engines": {
    "bun": ">=1.2.23",
    "node": ">=24.0.0"
  },
  "scripts": {
    "blocks:build": "bun -F '@blocks/*' build",
    "blocks:start": "bun -F '@blocks/*' start",
    "check:build": "bun blocks:build",
    "check:format": "bunx --bun prettier -c .",
    "check:types": "bunx --bun tsc --noEmit",
    "format": "bun check:format -w"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.24.0",
    "@tsconfig/bun": "^1.0.9",
    "@tsconfig/strictest": "^2.0.6",
    "@types/bun": "^1.3.1",
    "@types/react": "^18.3.26",
    "@types/wordpress__block-editor": "^11.5.17",
    "@types/wordpress__blocks": "^12.5.18",
    "@wordpress/block-editor": "^15.6.0",
    "@wordpress/blocks": "^15.6.0",
    "@wordpress/browserslist-config": "^6.33.0",
    "@wordpress/components": "^30.6.0",
    "@wordpress/i18n": "^6.6.0",
    "@wordpress/scripts": "^30.26.0",
    "prettier": "^3.6.2",
    "prettier-plugin-pkg": "^0.21.2",
    "react": "^18.3.1",
    "typescript": "^5.9.3"
  }
}
